FROM golang:1.10 as builder

RUN mkdir -p /build
ADD ./app_2 /build/
WORKDIR /build

RUN go get -d github.com/gorilla/mux
COPY . .
ENV GO111MODULE=on
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o app2 .

# Stage 2
FROM alpine:latest
RUN apk add --no-cache curl
COPY --from=builder /build/ /app/
WORKDIR /app
EXPOSE 7000
CMD [ "./app2" ]